<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--      <item name="colorPrimary">@color/colorPrimary</item>
              <item name="colorPrimaryDark">@color/colorPrimary</item>-->

    </style>

    <style name="CircularProgress" parent="Material.Drawable.CircularProgress">
        <item name="cpd_padding">0dp</item>
        <item name="cpd_initialAngle">0</item>
        <item name="cpd_maxSweepAngle">270</item>
        <item name="cpd_minSweepAngle">1</item>
        <item name="cpd_strokeSize">6dp</item>
        <item name="cpd_strokeColor">@color/colorPrimary</item>
        <item name="cpd_strokeSecondaryColor">@android:color/transparent</item>
        <item name="cpd_reverse">false</item>
        <item name="cpd_rotateDuration">1000</item>
        <item name="cpd_transformDuration">600</item>
        <item name="cpd_keepDuration">200</item>
        <item name="cpd_transformInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="pv_progressMode">indeterminate</item>
        <item name="cpd_inAnimDuration">0</item>
        <item name="cpd_outAnimDuration">@android:integer/config_mediumAnimTime</item>
    </style>


    <style name="AlarmProgress" parent="Material.Drawable.CircularProgress">
        <item name="cpd_padding">0dp</item>
        <item name="cpd_initialAngle">0</item>
        <item name="cpd_maxSweepAngle">300</item>
        <item name="cpd_minSweepAngle">1</item>
        <item name="cpd_strokeSize">20dp</item>
        <item name="cpd_strokeColor">@color/colorPrimary</item>
        <item name="cpd_strokeSecondaryColor">@color/light_grey</item>
        <item name="cpd_reverse">false</item>
        <item name="cpd_rotateDuration">300000</item>
        <item name="cpd_transformDuration">100</item>
        <item name="cpd_keepDuration">100</item>
        <item name="cpd_transformInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="pv_progressMode">indeterminate</item>
        <item name="cpd_inAnimDuration">0</item>
        <item name="cpd_outAnimDuration">@android:integer/config_mediumAnimTime</item>
    </style>

    <style name="LinearProgress" parent="Material.Drawable.LinearProgress">
        <item name="lpd_maxLineWidth">50%</item>
        <item name="lpd_minLineWidth">30%</item>
        <item name="lpd_strokeSize">5dp</item>
        <item name="lpd_strokeColor">@color/app_green</item>
        <item name="lpd_strokeSecondaryColor">@color/app_green</item>
        <item name="lpd_reverse">false</item>
        <item name="lpd_travelDuration">2000</item>
        <item name="lpd_transformDuration">600</item>
        <item name="lpd_keepDuration">200</item>
        <item name="lpd_strokeColors">@array/rainbow</item>
        <item name="lpd_transformInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="pv_progressMode">determinate</item>
        <item name="lpd_inAnimDuration">@android:integer/config_mediumAnimTime</item>
        <item name="lpd_outAnimDuration">@android:integer/config_mediumAnimTime</item>
        <item name="lpd_verticalAlign">top</item>
    </style>

    <declare-styleable name="SlidingUpPanelLayout">
        <attr name="panelHeight" format="dimension" />
        <attr name="shadowHeight" format="dimension" />
        <attr name="paralaxOffset" format="dimension" />
        <attr name="fadeColor" format="color" />
        <attr name="flingVelocity" format="integer" />
        <attr name="dragView" format="reference" />
        <attr name="overlay" format="boolean" />
    </declare-styleable>

    <style name="s" parent="Material.Widget.TabPageIndicator">
        <item name="android:textAppearance">@style/d</item>
        <item name="tpi_indicatorColor">@color/white</item>
        <item name="tpi_mode">fixed</item>

    </style>

    <style name="d" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="st" parent="Material.Widget.SnackBar">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="sb_actionTextColor">@color/red</item>
    </style>

</resources>
